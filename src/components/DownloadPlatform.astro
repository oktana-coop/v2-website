---
import { Icon } from 'astro-icon/components';
import DownloadArtifact from './DownloadArtifact.astro';

interface DownloadAsset {
  name: string;
  file: string;
  recommended?: boolean;
}

interface Props {
  category: string;
  icon: string;
  assets: DownloadAsset[];
  version: string;
  baseUrl: string;
}

const { category, icon, assets, version, baseUrl } = Astro.props;
---

<div class="border-b border-gray-100 pb-6 last:border-b-0">
  <h2 class="text-lg font-semibold mb-4 flex items-center gap-3">
    <Icon name={icon} class="w-5 h-5 text-gray-600" />
    {category}
  </h2>
  <div class="space-y-1">
    {assets.map(asset => (
      <DownloadArtifact 
        name={asset.name}
        file={asset.file}
        version={version}
        baseUrl={baseUrl}
        recommended={asset.recommended}
      />
    ))}
  </div>
</div>
