---
import { Icon } from 'astro-icon/components';

interface Props {
  text: string;
  size?: 'sm' | 'md' | 'lg';
  icon?: string;
  classes?: string;
  id?: string;
}

const { text, icon, size = 'md', classes, id } = Astro.props;

const paddingClasses = {
  sm: 'gap-x-1.5 px-2.5 py-1.5',
  md: 'gap-x-1.5 px-3 py-2',
  lg: 'gap-x-2 px-3.5 py-2.5',
}[size];
---

<button
  type="button"
  class=`text-sm/6 font-semibold text-purple-500 shadow-sm ring-1 ring-inset ring-purple-500 hover:bg-purple-50 cursor-pointer ${paddingClasses} ${classes ?? ''}`
  id={id}
>
  {
    icon && (
      <span id={id && `${id}-icon`} class="-ml-0.5 size-6 inline-block">
        <Icon name={icon} aria-hidden="true" class="w-full h-full" />
      </span>
    )
  }
  <span id={id && `${id}-text`}>{text}</span>
</button>
